<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:id="@+id/chattingview"
    tools:context="com.example.capstonedesignandroid.ChattingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/chat_layout"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/chattingroomname"
                android:layout_width="150dp"
                android:layout_height="36dp"
                android:layout_gravity="left|center"
                android:gravity="left|center"
                android:layout_marginLeft="20dp"
                android:text="모임 이름은 여기"
                android:textSize="17dp"
                android:textStyle="bold"
                android:textColor="@color/asmr_blue"/>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/roomnum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center"
                android:gravity="right|center"
                android:text="00"
                android:textSize="14dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center"
                android:gravity="right|center"
                android:text="명 입장중"
                android:textSize="14dp"
                android:layout_marginRight="20dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ScrollView
                android:id="@+id/scrollview_chatting"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@id/chat_layout"
                android:fillViewport="true">

                <ListView
                    android:id="@+id/chatting"
                    android:listSelector="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:divider="#000000"
                    android:padding="2dp"
                    android:dividerHeight="0dp">

                </ListView>
            </ScrollView>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/chat_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="#e0e0e0"
        android:layout_alignParentBottom="true">

        <EditText
            android:id="@+id/chat_content"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_gravity="center"
            android:layout_weight="0.8"
            android:background="@drawable/round_edittext"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="0.05"/>

        <Button
            android:id="@+id/send_btn"
            android:layout_height="30dp"
            android:layout_weight="0.15"
            android:background="@color/asmr_blue"
            android:layout_below="@+id/chat_content"
            android:layout_gravity="right|center"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:text="전송"
            android:textColor="#ffffff"
            android:textStyle="bold"/>

    </LinearLayout>

</RelativeLayout>