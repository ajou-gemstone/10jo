<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CurrentManageReservationActivity">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        app:srcCompat="@drawable/updown"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:clickable="true"/>

    <ScrollView
        android:id="@+id/scrollViewOneToFour"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="90dp"
        android:layout_marginBottom="30dp">

        <LinearLayout
            android:id="@+id/ll1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:textStyle="bold"
                android:tag="4"
                android:textColor="@color/asmr_blue"
                android:text = "4F"/>
            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:textColor="@color/asmr_blue"
                android:textStyle="bold"
                android:tag="3"
                android:text = "3F"/>
            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:textColor="@color/asmr_blue"
                android:textStyle="bold"
                android:tag="2"
                android:text = "2F"/>
            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:textSize="25dp"
                android:textColor="@color/asmr_blue"
                android:textStyle="bold"
                android:tag="1"
                android:text = "1F"/>
        </LinearLayout>
    </ScrollView>

    <ScrollView
        android:id="@+id/scrollViewOne"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="90dp"
        android:layout_marginBottom="30dp">

        <LinearLayout
            android:id="@+id/ll2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:tag="2"
                android:text="2F"
                android:textColor="@color/asmr_blue"
                android:textStyle="bold"
                android:textSize="25dp" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:textColor="@color/asmr_blue"
                android:textStyle="bold"
                android:tag="1"
                android:text="1F"
                android:textSize="25dp" />
        </LinearLayout>

    </ScrollView>

    <FrameLayout
        android:id="@+id/buildingLectureroomFrameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </FrameLayout>

</RelativeLayout>