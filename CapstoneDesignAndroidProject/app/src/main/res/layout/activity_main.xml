<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/LectureroomCheckActivityButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="예약 강의실 확인"/>

        <Button
            android:id="@+id/test2Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="파이어베이스 테스트"/>
        <Button
            android:id="@+id/buildingGuardActivityButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="경비원 관리 액티비티" />

        <Button
            android:id="@+id/drawTestButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="추첨 테스트" />

        <CheckBox
            android:id="@+id/pastAvailCheckBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="오늘 과거 예약 가능" />

    </LinearLayout>

</RelativeLayout>