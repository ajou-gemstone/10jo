<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="20dp"
    android:gravity="center"
    tools:context=".CurrentManageReservationChoiceBuildingActivity">

<!--    "성호관", "다산관", "원천정보관", "율곡관", "서관", "신학생회관", "연암관", "원천관"-->
<!--    순서대로 tag 1~8-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginLeft="50dp"
        android:gravity="left"
        android:textColor="@color/asmr_blue"
        android:textStyle="bold"
        android:text="후문"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="10dp"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/button6"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="0.7"
            android:layout_marginRight="20dp"
            android:background="@drawable/building_button"
            android:layout_gravity="center"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:text="종합\n설계동"/>
        <Button
            android:id="@+id/button5"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@drawable/building_button"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:text="팔달관"/>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1.8"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="10dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/button3"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="0.7"
            android:background="@drawable/building_button"
            android:layout_gravity="center"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:text="원천\n정보관"/>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="2"/>
        <Button
            android:id="@+id/button2"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="0.8"
            android:background="@drawable/building_button"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:text="다산관"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="10dp"
        android:orientation="horizontal">
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1.9"/>
        <Button
            android:id="@+id/button1"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="0.8"
            android:background="@drawable/building_button"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:text="성호관"/>
        <Button
            android:id="@+id/button4"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="0.8"
            android:layout_marginLeft="20dp"
            android:background="@drawable/building_button"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:text="율곡관"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="10dp"
        android:orientation="horizontal">
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="0.5"/>
        <Button
            android:id="@+id/button8"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1.5"
            android:background="@drawable/building_button"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:text="원천관"/>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1.5"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="10dp"
        android:orientation="horizontal">
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="2.5"/>
        <Button
            android:id="@+id/button7"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:background="@drawable/building_button"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:text="연암관"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:textSize="20sp"
        android:gravity="center"
        android:textColor="@color/asmr_blue"
        android:textStyle="bold"
        android:text="정문"/>

</LinearLayout>
